
<div id="no_side">
	
<h1 class="input">SIGNIN</h1>

<% form_tag :action => 'do_signin' do %>

<div id="account_form">	
	<p><label for="user_email">login</label>
		<%= text_field 'user', 'login', :size=>"20" %></p>
	<p><label for="user_password">パスワード</label>
		<%= password_field 'user', 'password', :size=>"20" %></p>
</div>

<%= button_image_submit_tag "signin" %>
<% end %>

</div>